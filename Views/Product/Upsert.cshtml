@model Info.ViewModel.ProductVM

@{
var title = "Create Product";
}
<form method="post"  enctype="multipart/form-data">
@if (Model.Product.Id !=0)
{
title = "Edit Product";
<input asp-for="Product.Id" hidden/>
}
   <div class="border p-3 mt-4">
    <div class="row pb-2">
    <h2 class="tect-primary">@title</h2>
<hr />
</div>
  @*  <div asp-validation-summary="All"></div>*@
     <div class="mb-3">
        <label asp-for="Product.Name"></label>
        <input asp-for="Product.Name" class="form-cotrol" />
        <span asp-validation-for="Product.Name" class="text-danger"></span>
     </div>
     <div class="mb-3">
    <label asp-for="Product.Price"></label>
     <input asp-for="Product.Price" class="form-cotrol" />
    <span asp-validation-for="Product.Price" class="text-danger"></span>

      </div>
     <div class="mb-3">
      <label asp-for="Product.Description"></label>
       <input asp-for="Product.Description" class="form-cotrol" />
        <span asp-validation-for="Product.Description" class="text-danger"></span>

     </div>
     <div class="mb-3">
       Image
      <input type="file" name="files" id="uploadBox"  class="form-cotrol" />
      <span asp-validation-for="Product.Image" class="text-danger"></span>

      </div>
                 <div class="form-btn-group row">
                    <div class="mb-3">

                    <label asp-for="Product.CategoryId"></label>
                    <div class="col-8">
                    <Select input asp-for="Product.CategoryId" asp-items="@ViewBag.CategoryDropDown" class="form-cotrol">
                        <option selected> Select Category</option>
                    </Select>
                    
                    <span asp-validation-for="Product.Price" class="text-danger"></span>
                    </div>
                </div>
                </div>
     <div class="form-group-row">
    <div class="col-8 offset-4 row">
     <div class="col">
        @if(Model.Product.Id != 0)
             {
                    <input type="submit" class="btn btn-info w-100" value="Update"/>
             }
        else
{
        <input type="submit" onclick="return validateInput()" class="btn btn-primary w-100" value="Create"/>

           
}
    </div>

    </div>
    </div>
   
    <div class="col offset-2 row ">
         <br />
        <a asp-controller="category" asp-action="Index"  class="btn btn-secondary" style="width:150px">Back</a>
    </div>

    </div>
    </form>

@section Scripts{
@{
<partial name="_ValidationScriptsPartial" />
}
}
